# CurSwap Environment Variables

# Base URL (required for production)
NEXT_PUBLIC_BASE_URL=https://curswap.com

# OnchainKit API Key (recommended for better performance)
NEXT_PUBLIC_ONCHAINKIT_API_KEY=your_onchainkit_api_key_here

# WalletConnect Project ID (required for wallet connections)
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id_here

# Alchemy API Key (required for RPC access)
NEXT_PUBLIC_ALCHEMY_API_KEY=your_alchemy_api_key_here

# Tatum API Key (optional, for backup RPC)
NEXT_PUBLIC_TATUM_API_KEY=your_tatum_api_key_here

# Network Configuration
# Set to 'baseSepolia' for testnet, or remove for mainnet
# NEXT_PUBLIC_NETWORK=baseSepolia

# Base RPC URL (optional, uses public RPC by default)
# NEXT_PUBLIC_BASE_RPC_URL=https://mainnet.base.org

# Ankr RPC URL (optional backup)
# NEXT_PUBLIC_ANKR_RPC_URL=https://rpc.ankr.com/base

# Analytics (optional)
# NEXT_PUBLIC_GOOGLE_ANALYTICS=your_ga_id_here

# Pinata (for IPFS, optional)
# NEXT_PUBLIC_PINATA_API_KEY=your_pinata_api_key
# NEXT_PUBLIC_PINATA_SECRET_KEY=your_pinata_secret_key
# NEXT_PUBLIC_PINATA_JWT=your_pinata_jwt

# Development Settings
NODE_ENV=development
