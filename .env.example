# üåê Farcaster NFT Marketplace - Environment Variables

# Base Network RPC URLs
NEXT_PUBLIC_BASE_RPC_URL=https://mainnet.base.org
# For testnet: https://sepolia.base.org

# Farcaster Hub Configuration  
NEXT_PUBLIC_FARCASTER_HUB_URL=https://nemes.farcaster.xyz:2283

# MiniKit App Configuration
MINIKIT_APP_ID=your-minikit-app-id-here

# WalletConnect Project ID (get from https://cloud.walletconnect.com)
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your-walletconnect-project-id

# IPFS/Pinata Configuration (for NFT metadata and images)
PINATA_API_KEY=your-pinata-api-key
PINATA_SECRET_API_KEY=your-pinata-secret-api-key
PINATA_JWT=your-pinata-jwt-token
NEXT_PUBLIC_PINATA_GATEWAY=https://gateway.pinata.cloud

# Optional: Custom App Metadata
NEXT_PUBLIC_APP_NAME="Farcaster NFT Marketplace"
NEXT_PUBLIC_APP_DESCRIPTION="Social NFT marketplace for the Farcaster ecosystem"
NEXT_PUBLIC_APP_URL="https://your-domain.com"
NEXT_PUBLIC_APP_ICON="https://your-domain.com/icon.png"

# Optional: Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Development Settings
NODE_ENV=development
NEXT_TELEMETRY_DISABLED=1